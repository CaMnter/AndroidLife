<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Host Activity"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/insert_plugin_content_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert plugin ContentProvider"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/query_plugin_content_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Query plugin ContentProvider"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/delete_plugin_content_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete plugin ContentProvider"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColor="#000000"/>

</LinearLayout>